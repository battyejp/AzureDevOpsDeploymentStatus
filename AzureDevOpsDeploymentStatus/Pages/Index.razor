@page "/"

<h1>Environments</h1>

@if (@results == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <AzureDevOpsDeploymentStatus.Components.Environment Name="Dev" Version=@( results.ContainsKey("Deploy_Dev") ? results["Deploy_Dev"]: string.Empty ) />
            </div>
            <div class="col-sm">
                <AzureDevOpsDeploymentStatus.Components.Environment Name="Test" Version=@( results.ContainsKey("Deploy_Test") ? results["Deploy_Test"]: string.Empty ) />
            </div>
            <div class="col-sm">
                <AzureDevOpsDeploymentStatus.Components.Environment Name="SIT" Version=@( results.ContainsKey("Deploy_SIT") ? results["Deploy_SIT"]: string.Empty ) />
                <AzureDevOpsDeploymentStatus.Components.Environment Name="UAT" Version=@( results.ContainsKey("Deploy_UAT") ? results["Deploy_UAT"]: string.Empty ) />
                <AzureDevOpsDeploymentStatus.Components.Environment Name="NFT" Version=@( results.ContainsKey("Deploy_NFT") ? results["Deploy_NFT"]: string.Empty ) />
            </div>
            <div class="col-sm">
                <AzureDevOpsDeploymentStatus.Components.Environment Name="PreProd" Version=@( results.ContainsKey("Deploy_PreProd") ? results["Deploy_PreProd"]: string.Empty ) />
            </div>
            <div class="col-sm">
                <AzureDevOpsDeploymentStatus.Components.Environment Name="Prod" Version=@( results.ContainsKey("Deploy_Prod") ? results["Deploy_Prod"]: string.Empty ) />
            </div>
        </div>
    </div>
}
